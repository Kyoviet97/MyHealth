<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="@dimen/_10dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txt_review_health_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang lất dữ liệu..."
        android:textSize="@dimen/_14sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/_6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mục tiêu: 9390"
        android:textSize="@dimen/_12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/_6dp"/>

    <TextView
        android:id="@+id/txt_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="@dimen/_18dp"
        android:background="@drawable/bkg_step_count"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_29sp"
        android:textColor="#F88113"/>

</LinearLayout>
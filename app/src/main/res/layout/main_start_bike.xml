<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:padding="@dimen/_16dp"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/txtCurrentSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/bkg_step_count"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_30sp"
        android:textColor="#341E02"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="@dimen/_20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_timer_black_24dp"/>

            <TextView
                android:id="@+id/txt_time_bike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                android:textColor="#363D50"
                android:gravity="center"
                android:text="0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold"
                android:textColor="#9FAECF"
                android:gravity="center"
                android:layout_marginTop="-5dp"
                android:text="phút"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_fire"/>

            <TextView
                android:id="@+id/txt_calo_bike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                android:textColor="#363D50"
                android:gravity="center"
                android:text="0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold"
                android:textColor="#9FAECF"
                android:gravity="center"
                android:layout_marginTop="-5dp"
                android:text="calo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_directions_bike_24"/>

            <TextView
                android:id="@+id/txt_km_bike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                android:textColor="#363D50"
                android:gravity="center"
                android:text="0"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:layout_marginTop="-5dp"
                android:textStyle="bold"
                android:textColor="#9FAECF"
                android:gravity="center"
                android:text="km"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_speed_test"
        android:layout_margin="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:textSize="@dimen/_15sp"
        android:layout_weight="1"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_stop_bike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dừng đạp xe"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/bg_button_login"/>

</LinearLayout>